<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Contact Form with JS Object</title>
</head>
<body>

<h2>Contact Form</h2>

<form onsubmit="return validateForm()">

    <label>First Name:</label><br>
    <input type="text" id="fname"><br><br>

    <label>Last Name:</label><br>
    <input type="text" id="lname"><br><br>

    <label>Age:</label><br>
    <input type="text" id="age"><br><br>

    <label>Email:</label><br>
    <input type="text" id="email"><br><br>

    <label>Phone:</label><br>
    <input type="text" id="phone"><br><br>

    <label>Message:</label><br>
    <textarea id="message" rows="4" cols="30"></textarea><br><br>

    <input type="submit" value="Submit">

</form>

<p id="error" style="color:red;"></p>

<hr>

<h3>Saved Object Output:</h3>
<div id="output" style="font-size: 18px; color: green;"></div>

<script>
function validateForm() {

    let fname = document.getElementById("fname").value.trim();
    let lname = document.getElementById("lname").value.trim();
    let age = document.getElementById("age").value.trim();
    let email = document.getElementById("email").value.trim();
    let phone = document.getElementById("phone").value.trim();
    let msg = document.getElementById("message").value.trim();
    let error = "";

    // Validation
    if (fname === "") error = "First Name is required.";
    else if (lname === "") error = "Last Name is required.";
    else if (age === "" || isNaN(age) || parseInt(age) <= 0) error = "Enter a valid age.";
    else if (email === "" || !email.includes("@") || !email.includes(".")) error = "Enter a valid email.";
    else if (phone === "" || isNaN(phone) || phone.length !== 10) error = "Phone must be 10 digits.";
    else if (msg.length < 5) error = "Message must be at least 5 characters.";

    // Display error
    if (error !== "") {
        document.getElementById("error").innerHTML = error;
        return false;
    }

    // CLEAR ERROR
    document.getElementById("error").innerHTML = "";

    // Save as OBJECT
    let student = {
        firstName: fname,
        lastName: lname,
        age: age,
        email: email,
        phone: phone,
        message: msg
    };

    // Display object on screen
    document.getElementById("output").innerHTML =
        "<b>First Name:</b> " + student.firstName + "<br>" +
        "<b>Last Name:</b> " + student.lastName + "<br>" +
        "<b>Age:</b> " + student.age + "<br>" +
        "<b>Email:</b> " + student.email + "<br>" +
        "<b>Phone:</b> " + student.phone + "<br>" +
        "<b>Message:</b> " + student.message;

    return false; // prevent actual form submission
}
</script>

</body>
</html>

  
 
