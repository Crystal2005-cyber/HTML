    <!-- JavaScript Section -->
    <script>
        // 1️⃣ Show a welcome alert when the page loads
        function showWelcome() {
            alert("Welcome to Suchanda Dutta's Profile Page!");
            displayDate();
        }

        // 2️⃣ Display current date and time
        function displayDate() {
            const now = new Date();
            document.getElementById("date").innerHTML = "Current Date & Time: " + now.toLocaleString();
        }

        // 3️⃣ Validate form before submission
        function validateForm() {
            let name = document.getElementById("name").value;
            let email = document.getElementById("email").value;

            if (name == "" || email == "") {
                alert("Please fill in both Name and Email before submitting.");
                return false; // prevent form from submitting
            } else {
                alert("Thank you, " + name + "! Your message has been submitted.");
                return true;
            }
        }

        // 4️⃣ Change heading color when button is clicked
        function changeHeadingColor() {
            const heading = document.getElementById("mainHeading");
            heading.style.color = heading.style.color === "darkblue" ? "darkgreen" : "darkblue";
        }
    </script>
