// Build table
const table=document.getElementById("ptable");
data.forEach(e=>{
  const div=document.createElement("div");
  div.className=`element ${e.cat}`;
  div.style.gridColumn=e.x;
  div.style.gridRow=e.y;
  div.innerHTML=`<div class='number'>${e.n}</div>
                 <div class='symbol'>${e.s}</div>
                 <div class='name'>${e.name}</div>`;
  div.onclick=()=>showDetails(e);
  table.appendChild(div);
});

// Onclick → show info below
function showDetails(e){
  document.getElementById("details").style.display="block";
  document.getElementById("elName").innerText=`${e.name} (${e.s})`;
  document.getElementById("elNumber").innerText=e.n;
  document.getElementById("elSymbol").innerText=e.s;
  document.getElementById("elCategory").innerText=e.cat;
}
