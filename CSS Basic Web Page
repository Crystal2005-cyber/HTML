            font-weight: bold;
        }
        a:hover {
            color: darkred;
            text-decoration: underline;
        }

        /* --- Table Styling --- */
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 15px 0;
        }

        th, td {
            border: 1px solid #555;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #add8e6;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        /* --- Lists --- */
        ol, ul, dl {
            margin-left: 30px;
            margin-bottom: 15px;
        }

        /* --- Image --- */
        img {
            display: block;
            margin: 10px auto;
            border: 2px solid #333;
            border-radius: 10px;
        }

        /* --- Form Styling --- */
        form {
            background-color: #f9f9f9;
